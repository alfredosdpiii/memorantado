{
  "name": "memorantado",
  "version": "0.1.3",
  "description": "MCP server for persistent memory storage with SQLite backend and Svelte web UI",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "memorantado": "bin/memorantado.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "knowledge-graph",
    "sqlite",
    "ai",
    "claude",
    "anthropic"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alfredosdpiii/memorantado.git"
  },
  "homepage": "https://github.com/alfredosdpiii/memorantado#readme",
  "bugs": {
    "url": "https://github.com/alfredosdpiii/memorantado/issues"
  },
  "author": "alfredosdpiii",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:web && tsx watch src/main.ts",
    "dev:web": "vite --config web/vite.config.ts",
    "build": "npm run build:web && tsc && npm run copy:schema",
    "build:web": "vite build --config web/vite.config.ts",
    "copy:schema": "cp src/db/schema.sql dist/db/schema.sql",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@fastify/static": "^8.0.0",
    "@modelcontextprotocol/sdk": "^1.25.0",
    "better-sqlite3": "^11.6.0",
    "fastify": "^5.1.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.0",
    "svelte": "^5.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
